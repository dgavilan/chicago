@model Rated.Models.UserProfile.ProfileViewModel

@{
    ViewBag.Title = "Edit Account";
}

<h2>Edit Account</h2>

@using (Html.BeginForm("EditAccount", "UserProfile", FormMethod.Post))
{

    <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>First Name:</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Bio:</label>
        @Html.TextBoxFor(m => m.Bio, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Old Password:</label>
        <input type="text" id="OldPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label>New Password:</label>
        <input type="text" id="NewPassword" class="form-control" />
    </div>

    <br />

    <input type="submit" value="Update" class="btn btn-primary" />
}
