@model List<Rated2.Models.Project.ProjectViewModel>

<br />

@foreach (var project in Model)
{
    <div style="background-color:ghostwhite; padding:15px">
        <article>
            <ul class="nav nav-pills">
                <li>
                    <a style="color:#333; font-size:15px" onclick="window.location='Project/Edit/@project.ProjectId'">
                        <span class="glyphicon glyphicon-edit">
                        </span> Edit
                    </a>
                </li>
            </ul>

            <header>
                <span style="font-size:25px; font-weight:bold">
                    @project.ProjectName
                </span>
            </header>
            <p>
                @project.ProjectDescription
            </p>

            <p>
                Modified @project.CreatedDate <br />
                Details: @project.ProjectDetailsCount <br />
            </p>
        </article>
    </div>
    
    <div>&nbsp;</div>
}
