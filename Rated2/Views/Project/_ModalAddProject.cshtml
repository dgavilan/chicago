<div id="modalAddProject" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Start a New Project</h4>
            </div>
            <div class="modal-body">

                

                <table width="100%" cellpadding="5" cellspacing="5">
                    <tr>
                        <td valign="top">
                            <div class="form-group">
                                <label for="inputdefault">Company</label>
                                <select id="CompanyId" name="CompanyId" class="form-control ">
                                    <option value="">-pick a company-</option>
                                </select>
                            </div>
                            <button class="btn btn-link" id="btnAddNewComapany">Add New Company</button>
                        </td>
                        <td valign="top">
                            <div class="form-group">
                                <label for="inputdefault">Role in the Project</label>
                                <input type="text" class="form-control" name="CompanyName" id="CompanyName" placeholder="Name this project">
                            </div>

                            <div class="form-group">
                                <label for="inputdefault">Project Name</label>
                                <input type="text" class="form-control" name="ProjectName" id="ProjectName" placeholder="Name this project">
                            </div>

                            <div class="form-group">
                                <label for="inputdefault">Project Description</label>
                                <textarea name="ProjectDescription" id="ProjectDescription" class="form-control" rows="5" placeholder="Describe this project"></textarea>
                            </div>
                        </td>
                    </tr>
                </table>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveProject" onclick="Project.AddNewProject()">Save</button>
            </div>
        </div>
    </div>
</div>

