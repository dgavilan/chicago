<div id="modalAddProject" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Start a New Project</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="inputdefault">Project Name</label>
                    <input type="text" class="form-control" name="ProjectName" id="ProjectName" placeholder="Name this project">
                </div>

                <div class="form-group">
                    <label for="inputdefault">Project Description</label>
                    <textarea name="ProjectDescription" id="ProjectDescription" class="form-control" rows="5" placeholder="Describe this project"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveProject" onclick="Project.SaveProject()">Save</button>
            </div>
        </div>
    </div>
</div>